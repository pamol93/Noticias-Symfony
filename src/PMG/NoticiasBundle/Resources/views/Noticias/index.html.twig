{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Noticias</h1>
    <div class="listadoNoticias">
        {% for noticia in list%}
        <div class="noticia row">
            <div class="col-md-4">
                <img src="{{ asset('public/images/imageBase.jpg') }}" class="img-thumbnail noticia-img" alt="imagen noticia">
            </div>
            <div class="col-md-8">
                <h4 class="noticia-title">{{ noticia.title}}</h4>
                <h5>Por {{ noticia.author}} - {{ noticia.updateDate |date('d/m/Y') }}</h5>
                <p>{{noticia.description}}</p>
            </div>

        </div>
    </div>

        
    {% endfor %}
</div>
{% endblock %}